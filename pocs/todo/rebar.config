{erl_opts, [debug_info, warn_export_all, warn_unused_import, warn_unused_vars]}.

%% Only esqlite is needed now; built-in json is part of stdlib.
{deps, [
    {esqlite, ">= 0.4.1"}
]}.

%% Formatting with erlfmt via the rebar3_format plugin.
%% You can run:
%%   rebar3 format -w     (write formatted files)
%%   rebar3 format --check
{project_plugins, [erlfmt]}.

{erlfmt, [
    write,
    {files, ["{src,include,test}/*.{hrl,erl,src}", "rebar.config"]}
]}.

%% Automatically start the app in `rebar3 shell`.
{shell, [{apps, [todo]}]}.
